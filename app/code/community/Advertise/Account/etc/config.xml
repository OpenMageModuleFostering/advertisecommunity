<?xml version="1.0"?>
<!-- 
/**
 * @category   Advertise
 * @package    Advertise_Account
 */
 --> 
<config>
    <modules>
        <Advertise_Account>
            <version>1.0.2</version>
        </Advertise_Account>
    </modules>
    
    <!-- Default values for settings: nest nodes as configuration setting path, e.g. advertise/account/version -->
    <default>
        <!-- Should change to "account" as bottom one, need to update system.xml section and other names... -->
        <advertise>
            <advertise>
                <version>1.0.2</version>
                <template></template>
            </advertise>
        </advertise>

        <advertise>
            <advertise>
                <activated>1</activated>
            </advertise>
        </advertise>

        <advertise>
            <account>
                <version>1.0.2</version>
                <template></template>
            </account>
        </advertise>
    </default>
    
    <!-- Setup resources -->
    <!-- ??? Mysql4_Setup class does not exist anywhere ??? -->
    <resources>
        <account_setup>
            <setup>
                <module>Advertise_Account</module>
                <class>Advertise_Account_Resource_Mysql4_Setup</class>
            </setup>
            <connection>
                <use>core_setup</use>
            </connection>
        </account_setup>
    </resources>
	
    <frontend>
        <routers>
            <account>
                <use>standard</use>
                <args>
                    <module>Advertise_Account</module>
                    <frontName>account</frontName>
                </args>
            </account>
            
            <!-- Not sure what this /product frontName is used for? -->
            <product>
                <use>standard</use>
                <args>
                    <module>Advertise_Account</module>
                    <frontName>product</frontName>
                </args>
            </product>
            
        </routers>
        
        <!-- Not sure what this layout element does - product.xml doesn't exist anywhere? -->
        <layout>
            <updates>
                <Advertise>
                    <file>product.xml</file>
                </Advertise>
            </updates>
        </layout>
    </frontend>
    
    <admin>
        <routers>
            <account>
                <use>admin</use>
                <args>
                    <module>Advertise_Account</module>
                    <frontName>account</frontName>
                </args>
            </account>
        </routers>
    </admin>

    <global>
        <resources>
            <advertise_setup>
                <setup>
                    <module>Advertise_Account</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </advertise_setup>
            <advertise_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </advertise_write>
            <advertise_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </advertise_read>
        </resources>
        
        <blocks>
            <advertise>
                <class>Advertise_Account_Block</class>
            </advertise>
        </blocks>

        <helpers>
            <advertise>
                <class>Advertise_Account_Helper</class>
            </advertise>
            <product>
                <class>Advertise_Account_Helper</class>
            </product>
        </helpers>

        <models>
            <account>
                <class>Advertise_Account_Model</class>
            </account>
        </models>
    </global>
    
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <advertise_settings translate="title" module="product">
                                            <title>Advertise Section</title>
                                            <sort_order>1</sort_order>
                                        </advertise_settings>
                                        <advertise translate="title">
                                            <title>Advertise</title>
                                            <sort_order>2</sort_order>
                                        </advertise>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
		
        <layout>
            <updates>
                <Advertise>
                    <file>settings.xml</file>
                </Advertise>
            </updates>
        </layout>
    </adminhtml>

    <!-- Do we still need this cron stuff? -->
    <crontab>
        <jobs>
            <advertise_generate>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>advertise/observer::scheduledGenerateCatalogs</model>
                </run>
            </advertise_generate>
        </jobs>
    </crontab>
</config>
